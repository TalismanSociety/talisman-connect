{
    "compilerOptions": {
      "target": "es6",                          
      "module": "esnext",
      "declaration": true,
      "moduleResolution": "node",   
      "noLib": false,                  
      "noEmitOnError": true,
      "lib": ["es5", "es6", "es2017", "dom"],                            
      "esModuleInterop": true,                 
      "outDir": "./lib",
      "baseUrl": "src",
      "rootDir": "./",
      "emitDeclarationOnly": true
    }
    ,
    "include": ["./src/**/*.ts"]
  }

